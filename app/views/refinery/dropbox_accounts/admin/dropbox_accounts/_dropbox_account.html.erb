<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(dropbox_account) -%>">
  <span class='title'>
    DropboxAccount created_at <%= l dropbox_account.created_at, :format => :short %>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("delete.png"), refinery.dropbox_accounts_admin_dropbox_account_path(dropbox_account),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => "DropboxAccount created at #{l dropbox_account.created_at, :format => :short}"),
        :method => :delete %>
  </span>
</li>
